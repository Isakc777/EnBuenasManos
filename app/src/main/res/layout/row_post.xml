<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:padding="5dp">
    <ImageButton
        android:id="@+id/moreBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_next_black"
        app:tint="@color/black" />

    <!--Post: titulo de los posts-->
    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@id/moreBtn"
        android:text="Título de las Publicaciones"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <!--Autor, tiempo etc-->
    <TextView
        android:id="@+id/publishInfoTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTv"
        android:layout_toStartOf="@id/moreBtn"
        android:text="En Buenas Manos 20/02/2022"
        android:textColor="@color/gray1"/>
    <!--Imagen de la publicacion-->
    <ImageView
        android:id="@+id/imageTv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/publishInfoTv"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:adjustViewBounds="true"
        android:background="@color/gray2"
        android:scaleType="centerCrop"
        android:src="@drawable/ic__image_black"/>
    <!--Descripcion de la publicacion-->
    <TextView
        android:id="@+id/descriptionTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/publishInfoTv"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@id/moreBtn"
        android:layout_toEndOf="@id/imageTv"
        android:TextColor="@color/black"
        android:text="Aquí podremos observar una dreve dscripcón del post en cuestión"
        android:maxLines="4"
        android:ellipsize="end" />
</RelativeLayout>